<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_modify_events"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.makethings.infoplatform.Activity.CheckEventActivity">
    <TextView
        android:text="活动名字"
        android:id="@+id/check_event_name"
        android:textSize="36sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="活动介绍"
        android:id="@+id/check_event_introduction"
        android:textSize="18sp"
        android:paddingLeft="15dp"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:text="已报名人员"
        android:id="@+id/check_event_joined_members"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/check_event_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"/>
</LinearLayout>
