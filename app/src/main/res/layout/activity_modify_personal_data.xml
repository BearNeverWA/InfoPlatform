<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_modify_personal_data"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:context="com.makethings.infoplatform.Activity.ModifyPersonalDataActivity">

        <FrameLayout
            android:id="@+id/head_portrait_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/head_portrait"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@mipmap/ic_launcher" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/account_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/head_portrait_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <EditText
                android:id="@+id/et_account"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_edittext_height"
                android:background="#dddddddd"
                android:focusable="false"
                android:maxLength="20"
                android:paddingLeft="55dp"
                android:paddingRight="60dp"
                android:singleLine="true"
                android:text="" />

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="账号"
                android:visibility="visible" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/department_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <EditText
                android:id="@+id/et_department"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_edittext_height"
                android:background="#dddddddd"
                android:focusable="false"
                android:maxLength="20"
                android:paddingLeft="55dp"
                android:paddingRight="60dp"
                android:singleLine="true"
                android:text="" />

            <TextView
                android:id="@+id/tv_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="学院"
                android:visibility="visible" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/age_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/department_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <EditText
                android:id="@+id/et_age"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_edittext_height"
                android:background="#dddddddd"
                android:maxLength="20"
                android:numeric="integer"
                android:paddingLeft="55dp"
                android:paddingRight="60dp"
                android:singleLine="true"
                android:text="" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="年龄"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_age"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:background="@mipmap/ic_launcher" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/sex_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/age_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <EditText
                android:id="@+id/et_sex"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_edittext_height"
                android:background="#dddddddd"
                android:focusable="false"
                android:maxLength="3"
                android:paddingLeft="55dp"
                android:paddingRight="60dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="性别"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_sex"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:background="@mipmap/ic_launcher" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/phone_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sex_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/bt_phone"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:background="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_edittext_height"
                android:background="#dddddddd"
                android:focusable="false"
                android:maxLength="14"
                android:numeric="integer"
                android:paddingLeft="70dp"
                android:paddingRight="60dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="电话号码"
                android:visibility="visible" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/email_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_edittext_height"
                android:background="#dddddddd"
                android:focusable="false"
                android:maxLength="20"
                android:paddingLeft="55dp"
                android:paddingRight="60dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="邮箱"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_email"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:background="@mipmap/ic_launcher" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/qq_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <EditText
                android:id="@+id/et_qq"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_edittext_height"
                android:background="#dddddddd"
                android:focusable="false"
                android:maxLength="20"
                android:numeric="integer"
                android:paddingLeft="55dp"
                android:paddingRight="60dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="QQ"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_qq"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:background="@mipmap/ic_launcher" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/address_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/qq_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <EditText
                android:id="@+id/et_address"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_edittext_height"
                android:background="#dddddddd"
                android:focusable="false"
                android:maxLength="40"
                android:paddingLeft="55dp"
                android:paddingRight="60dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="地址"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_address"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:background="@mipmap/ic_launcher" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/interest_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <EditText
                android:id="@+id/et_interest"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_edittext_height"
                android:background="#dddddddd"
                android:focusable="false"
                android:maxLength="40"
                android:paddingLeft="55dp"
                android:paddingRight="60dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="爱好"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_interest"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:background="@mipmap/ic_launcher" />
        </FrameLayout>

        <Button
            android:id="@+id/bt_confirm"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/interest_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:text="确认" />
    </RelativeLayout>

</ScrollView>